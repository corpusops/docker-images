[program:nginx]
command = sh -c '\
    b=nginx \
    && if [ -e /bin/nginx.sh ];then b=/bin/nginx.sh;fi \
    && echo "Using $b">&2 && exec $b -g "daemon off;"'
autorestart = true
startretries = 3
startsecs = 20
killasgroup = true
stopasgroup = true
stopsignal = KILL
stopwaitsecs = 3
stdout_logfile=/dev/stdout
stderr_logfile=/dev/stderr
startretries=5
